// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  password     String?
  googleId     String?  @unique
  picture      String?
  refreshToken String?
  role         String   @default("user") // Global role: "user" (default) or "admin" (god mode - can access/edit everything)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  expenses           Expense[]
  groupMembers       GroupMember[]
  paymentsFrom       Payment[] @relation("PaymentFrom")
  paymentsTo         Payment[] @relation("PaymentTo")
  createdReminders   RecurringReminder[]
  createdInvites     GroupInvite[]
}

model Group {
  id          String   @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  members           GroupMember[]
  expenses          Expense[]
  payments          Payment[]
  recurringReminders RecurringReminder[]
  invites           GroupInvite[]
}

model GroupMember {
  id        String   @id @default(uuid())
  userId    String
  groupId   String
  role      String   @default("member") // Group-level role: "member" (default, can only edit own data) or "admin" (can manage group, edit all data in group)
  joinedAt  DateTime @default(now())
  
  user  User  @relation(fields: [userId], references: [id])
  group Group @relation(fields: [groupId], references: [id])
  
  @@unique([userId, groupId])
  @@index([userId])
  @@index([groupId])
  @@index([userId, role])
}

model Expense {
  id          String   @id @default(uuid())
  amount      Decimal  @db.Decimal(10, 2)
  description String
  category    String?
  date        DateTime @default(now())
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userId      String
  groupId     String
  
  user  User  @relation(fields: [userId], references: [id])
  group Group @relation(fields: [groupId], references: [id])
  
  @@index([groupId, date])
  @@index([userId])
  @@index([category])
}

model AuditLog {
  id          String   @id @default(uuid())
  entityType  String   // User, Group, GroupMember, Expense
  entityId    String   // ID of the affected entity
  action      String   // CREATE, UPDATE, DELETE
  userId      String?  // Who made the change (nullable for system actions)
  userName    String?  // Snapshot of user name at time of action
  oldValues   Json?    // Previous state (for UPDATE/DELETE)
  newValues   Json?    // New state (for CREATE/UPDATE)
  timestamp   DateTime @default(now())
  ipAddress   String?
  userAgent   String?
  
  @@index([entityType, entityId, timestamp])
  @@index([userId])
  @@index([timestamp])
}

enum PaymentStatus {
  PENDING
  COMPLETED
  CANCELLED
}

model Payment {
  id          String        @id @default(uuid())
  amount      Decimal       @db.Decimal(10, 2)
  fromUserId  String
  toUserId    String
  groupId     String
  status      PaymentStatus @default(PENDING)
  description String?
  createdAt   DateTime      @default(now())
  completedAt DateTime?
  updatedAt   DateTime      @updatedAt
  
  fromUser User  @relation("PaymentFrom", fields: [fromUserId], references: [id])
  toUser   User  @relation("PaymentTo", fields: [toUserId], references: [id])
  group    Group @relation(fields: [groupId], references: [id])
  
  @@index([groupId])
  @@index([fromUserId])
  @@index([toUserId])
  @@index([status])
  @@index([groupId, status])
  @@index([groupId, createdAt])
}

enum ReminderFrequency {
  WEEKLY
  MONTHLY
  YEARLY
  EVERY_6_MONTHS
}

model RecurringReminder {
  id          String            @id @default(uuid())
  title       String
  description String?
  amount      Decimal           @db.Decimal(10, 2)
  frequency   ReminderFrequency
  groupId     String
  nextDueDate DateTime
  isActive    Boolean           @default(true)
  createdById String
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  
  group     Group @relation(fields: [groupId], references: [id])
  createdBy User  @relation(fields: [createdById], references: [id])
  
  @@index([groupId])
  @@index([nextDueDate])
  @@index([isActive])
  @@index([groupId, isActive, nextDueDate])
}

enum InviteStatus {
  ACTIVE
  EXPIRED
  REVOKED
}

model GroupInvite {
  id          String       @id @default(uuid())
  code        String       @unique @default(cuid())
  groupId     String
  invitedById String
  createdAt   DateTime     @default(now())
  expiresAt   DateTime?    // Optional expiration date
  maxUses     Int?         // Optional limit on number of uses (null = unlimited)
  usedCount   Int          @default(0)
  status      InviteStatus @default(ACTIVE)
  
  group      Group @relation(fields: [groupId], references: [id])
  invitedBy  User  @relation(fields: [invitedById], references: [id])
  
  @@index([code])
  @@index([groupId])
  @@index([status])
}
