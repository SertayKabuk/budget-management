# Environment Variables for Budget Management App
# Copy this file to .env and fill in your actual values
# Docker Compose will automatically load this .env file

# ====================
# DATABASE
# ====================
# IMPORTANT: When using Docker, do NOT use "localhost"
# Use "host.docker.internal" (Docker Desktop) or your host machine's IP address
DATABASE_URL=postgresql://username:password@host.docker.internal:5432/database_name

# ====================
# AZURE OPENAI
# ====================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_USE_API_KEY=true

# ====================
# GOOGLE OAUTH
# ====================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-secret

# ====================
# JWT SECRET
# ====================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key

# ====================
# URLS - LOCAL DEVELOPMENT
# ====================
# These are set in docker-compose.local.yml automatically
# Uncomment and modify if you need different values
# BACKEND_URL=http://backend.localhost
# FRONTEND_URL=http://frontend.localhost

# ====================
# URLS - PRODUCTION
# ====================
# Uncomment and set these for production deployment
# BACKEND_URL=https://api.yourdomain.com
# FRONTEND_URL=https://yourdomain.com
# BACKEND_WS_URL=wss://api.yourdomain.com
